{
  "manifest_version": 3,
  "author": "Robert Sibek 2023",
  "name": "Click&Buy",
  "description": "One click to buy needed ingredients for your recipe",
  "version": "1.0",
  "action": {
    "default_popup": "oneclick.html",
    "default_icon": "images/IconBlue@2x.png"
  },
  "icons": {
    "16": "images/IconBlue.png",
    "32": "images/IconBlue@2x.png",
    "48": "images/IconBlue@3x.png",
    "128": "images/IconBlue@8x.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": ["scripts/content.js", "scripts/main.js"],
      "matches": [
        "https://developer.chrome.com/docs/extensions/*",
        "https://developer.chrome.com/docs/webstore/*",
        "https://www.apetitonline.cz/recept/*"
      ]
    }
  ]
}