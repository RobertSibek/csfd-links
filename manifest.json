{
  "manifest_version": 3,
  "author": "Robert Sibek 2023",
  "name": "CSFD Links",
  "description": "Show CSFD movie page",
  "version": "1.0",
  "action": {
    "default_popup": "csfd_links.html",
    "default_icon": "images/Icon@8x.png"
  },
  "icons": {
    "16": "images/Icon.png",
    "32": "images/Icon@2x.png",
    "48": "images/Icon@3x.png",
    "64": "images/Icon@4x.png",
    "128": "images/Icon@8x.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "scripts/content.js",
        "scripts/main.js"
      ],
      "run_at": "document_idle",
      "matches": [
        "https://play.hbomax.com/*",
        "https://www.netflix.com/*"
      ]
    }
  ]
}